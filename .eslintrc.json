{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "consistent-return": ["error",{"treatUndefinedAsUnspecified": false}],
    "object-shorthand": [
      "error",
      "always"
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary":true,"allowTaggedTemplates":true,"enforceForJSX":true }]
  }
}